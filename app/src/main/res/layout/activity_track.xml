<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TrackActivity">
<ImageView
    android:id="@+id/close_btn"
    android:layout_width="@dimen/_30sdp"
    android:layout_height="@dimen/_30sdp"
    android:src="@drawable/ic_close"
    android:layout_margin="@dimen/_20sdp"/>
    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_30sdp"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginTop="24dp"
            app:cardCornerRadius="50dp">

            <ImageView
                android:id="@+id/icon_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:gravity="center"
                android:scaleType="centerCrop"
                android:src="@drawable/trackperson" />
        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/name_person"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_15sdp"
            android:text="@string/nameperson"
            android:textColor="@android:color/black"
            android:textSize="@dimen/_18sdp"
            android:textStyle="normal" />
    </LinearLayout>
    <TextView
        android:id="@+id/how_many_coins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear"
        android:layout_marginLeft="@dimen/_110sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:text="22678"
        android:textSize="@dimen/_14sdp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/coins"
        android:layout_below="@id/linear"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:textSize="@dimen/_14sdp"
       android:layout_toRightOf="@+id/how_many_coins"/>
    <Button
        android:id="@+id/quiz_button"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="@dimen/_40sdp"
        android:background="@android:color/transparent"
        android:layout_below="@+id/how_many_coins"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_45sdp"
        android:text="الاختبارات"
        android:textAllCaps="false"
        android:textSize="@dimen/_16sdp"
        />
    <Button
        android:id="@+id/Leaderboard"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="@dimen/_40sdp"
        android:background="@android:color/transparent"
        android:layout_below="@+id/quiz_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_15sdp"
        android:text="أفضل المشتركين"
        android:textAllCaps="false"
        android:textSize="@dimen/_16sdp"

        />
    <Button
        android:id="@+id/notifications"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="@dimen/_40sdp"
        android:background="@android:color/transparent"
        android:layout_below="@+id/Leaderboard"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_15sdp"
        android:text="الاشعارات"
        android:textAllCaps="false"
        android:textSize="@dimen/_16sdp"
        />
    <Button
        android:id="@+id/Earncoins"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="@dimen/_40sdp"
        android:background="@android:color/transparent"
        android:layout_below="@+id/notifications"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_15sdp"
        android:text="احصل علي كوينز"
        android:textAllCaps="false"
        android:textSize="@dimen/_16sdp"
        />
    <android.support.v7.widget.CardView
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"
       android:layout_marginTop="@dimen/_20sdp"
        android:layout_toRightOf="@+id/notifications"
        android:layout_below="@id/Leaderboard"
        app:cardCornerRadius="@dimen/_25sdp">

        <Button
            android:id="@+id/notificationsnumber"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:background="#039BE5"
            android:gravity="center"
            android:text="4"
            android:textColor="@android:color/white"
            android:scaleType="centerCrop" />
    </android.support.v7.widget.CardView>

    <View
        android:id="@+id/hori_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="@android:color/darker_gray"
        android:layout_marginTop="@dimen/_145sdp"
        android:layout_below="@id/Earncoins"
        />

    <LinearLayout
        android:id="@+id/settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hori_line"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:orientation="horizontal"
        tools:ignore="UseCompoundDrawables">

        <ImageView
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_12sdp"
            android:src="@drawable/se"
            tools:ignore="ContentDescription" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="الاعدادات"
            android:textSize="@dimen/_16sdp" />

    </LinearLayout>
    <View
        android:id="@+id/veri_line"
        android:layout_width="@dimen/_1sdp"
        android:layout_height="@dimen/_50sdp"
        android:background="@android:color/darker_gray"
        android:layout_below="@+id/hori_line"
        android:layout_toRightOf="@id/settings"
        android:layout_marginLeft="@dimen/_45sdp"
        />

    <LinearLayout
        android:id="@+id/logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hori_line"
        android:layout_marginLeft="@dimen/_35sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_toRightOf="@+id/veri_line"
        android:orientation="horizontal"
        tools:ignore="UseCompoundDrawables">

        <ImageView
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_12sdp"
            android:src="@drawable/logout"
            tools:ignore="ContentDescription" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="تسجيل خروج"
            android:textSize="@dimen/_16sdp" />

    </LinearLayout>
</RelativeLayout>