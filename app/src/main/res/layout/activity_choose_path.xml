<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChoosePath">
    <ImageView
        android:id="@+id/arrow"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_margin="@dimen/_15sdp"
        android:src="@drawable/ic_arrow_back_black_24dp"
        />
    <TextView
        android:id="@+id/quizzes_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="الاختبارات"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/_25sdp"
        android:textSize="@dimen/_24sdp"
        android:textColor="@android:color/black"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_55sdp"
        android:layout_below="@+id/quizzes_text"
        android:layout_marginTop="-30dp"
        android:src="@drawable/yellow" />
    <TextView
        android:id="@+id/image_yellow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/quizzes_text"
        android:layout_centerHorizontal="true"
        android:text="اختر طريقك"
        android:textColor="@android:color/white"
        android:textSize="@dimen/_16sdp"
        />
    <LinearLayout
        android:id="@+id/language_linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image_yellow"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/_35sdp"
        android:layout_marginLeft="@dimen/_25sdp">
<ImageView
    android:id="@+id/language_image"
    android:layout_width="@dimen/_120sdp"
    android:layout_height="@dimen/_120sdp"
    android:src="@drawable/language"
    />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_42sdp"
            android:text= "لغات"
            android:textSize="@dimen/_20sdp"
            android:textColor="@android:color/black"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/Science_linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image_yellow"
        android:layout_toRightOf="@+id/language_linear"
        android:layout_marginTop="@dimen/_35sdp"
        android:layout_marginLeft="@dimen/_25sdp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/sciene_image"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="@dimen/_120sdp"
            android:src="@drawable/sciene" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_45sdp"
            android:text="علوم"
            android:textSize="@dimen/_20sdp"
            android:textColor="@android:color/black"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/Drama_linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/language_linear"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/_55sdp"
        android:layout_marginLeft="@dimen/_25sdp"
        android:layout_marginStart="@dimen/_25sdp">

        <ImageView
            android:id="@+id/drama_image"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="@dimen/_120sdp"
            android:src="@drawable/drama" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_45sdp"
            android:text="دراما"
            android:textSize="@dimen/_20sdp"
            android:textColor="@android:color/black"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/Art_linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Science_linear"
        android:layout_toRightOf="@+id/Drama_linear"
        android:layout_marginTop="@dimen/_55sdp"
        android:layout_marginLeft="@dimen/_25sdp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/art_image"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="@dimen/_120sdp"
            android:src="@drawable/art" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_23sdp"
            android:text="فن وتصميم"
            android:textSize="@dimen/_20sdp"
            android:textColor="@android:color/black"/>
    </LinearLayout>
</RelativeLayout>