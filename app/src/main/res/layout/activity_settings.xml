<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity">

    <ImageView
        android:id="@+id/arrow"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_margin="@dimen/_15sdp"
        android:src="@drawable/ic_arrow_back_black_24dp"
        />
    <TextView
        android:id="@+id/settings_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="الاعدادات"
        android:textSize="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:textColor="#000000"/>

    <!--
    elkabera
    -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/settings_text"
        android:gravity="right"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_35sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:text="الحساب"
            android:textSize="@dimen/_16sdp" />
        <!--
    change email
    -->
        <androidx.cardview.widget.CardView
            android:id="@+id/change_email"
            android:layout_width="@dimen/_300sdp"
            android:layout_height="@dimen/_55sdp"
           android:layout_marginRight="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_8sdp"
            app:cardCornerRadius="@dimen/_8sdp"
            app:cardElevation="@dimen/_8sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_65sdp"
                android:gravity="right"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_10sdp"
                        android:text="تغيير الإيميل"
                        android:textColor="#000000"
                        android:textSize="@dimen/_15sdp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-10dp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:text="hannafields@gmail.com" />
                </LinearLayout>

                <ImageView
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_margin="@dimen/_10sdp"
                    android:src="@drawable/email_ic" />

            </LinearLayout>
            <ImageView
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:src="@drawable/ic_keyboard_arrow_left"
                android:layout_margin="@dimen/_15sdp"/>
        </androidx.cardview.widget.CardView>






























        <!--
   change password
   -->
        <androidx.cardview.widget.CardView
            android:id="@+id/change_password"
            android:layout_width="@dimen/_300sdp"
            android:layout_height="@dimen/_55sdp"
            android:layout_marginRight="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_18sdp"
            app:cardCornerRadius="@dimen/_8sdp"
            app:cardElevation="@dimen/_8sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_65sdp"
                android:gravity="right"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_10sdp"
                        android:text="تغيير كلمة السر"
                        android:textColor="#000000"
                        android:textSize="@dimen/_15sdp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-10dp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:text="تغيير كلمة السر جديدة" />
                </LinearLayout>

                <ImageView
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_margin="@dimen/_10sdp"
                    android:src="@drawable/password_ic" />

            </LinearLayout>
            <ImageView
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:src="@drawable/ic_keyboard_arrow_left"
                android:layout_margin="@dimen/_15sdp"/>
        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="أخري"
            android:layout_marginTop="@dimen/_35sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:textSize="@dimen/_16sdp"/>
        <!--
   open or close notification
   -->
        <androidx.cardview.widget.CardView
            android:id="@+id/notification"
            android:layout_width="@dimen/_300sdp"
            android:layout_height="@dimen/_55sdp"
            android:layout_marginRight="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_18sdp"
            app:cardCornerRadius="@dimen/_8sdp"
            app:cardElevation="@dimen/_8sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_65sdp"
                android:gravity="right"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_10sdp"
                        android:text="إيقاف الاشعارات"
                        android:textColor="#000000"
                        android:textSize="@dimen/_15sdp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-10dp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:text="فتح و قفل الاشعارات" />
                </LinearLayout>

                <ImageView
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_margin="@dimen/_10sdp"
                    android:src="@drawable/notification_ic" />

            </LinearLayout>
            <Switch
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_margin="@dimen/_15sdp"/>
        </androidx.cardview.widget.CardView>
        <!--
           facebook
           -->
        <androidx.cardview.widget.CardView
            android:id="@+id/with_facebook"
            android:layout_width="@dimen/_300sdp"
            android:layout_height="@dimen/_55sdp"
            android:layout_marginRight="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_18sdp"
            app:cardCornerRadius="@dimen/_8sdp"
            app:cardElevation="@dimen/_8sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_65sdp"
                android:gravity="right"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_10sdp"
                        android:text="ربط حساب الفيسبوك"
                        android:textColor="#000000"
                        android:textSize="@dimen/_15sdp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-10dp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:text="السماح في الدخول و المشاركة" />
                </LinearLayout>

                <ImageView
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_margin="@dimen/_10sdp"
                    android:src="@drawable/fb_ic" />

            </LinearLayout>
            <ImageView
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:src="@drawable/ic_keyboard_arrow_left"
                android:layout_margin="@dimen/_15sdp"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
<ImageView
    android:id="@+id/khroog"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/_60sdp"
    android:src="@drawable/logout_image"
    android:layout_alignParentBottom="true"
    android:gravity= "center"/>
</RelativeLayout>