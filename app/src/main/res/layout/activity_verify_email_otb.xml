<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Verify_email_otb">
    <ImageView
        android:id="@+id/arrow"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_margin="@dimen/_15sdp"
        android:src="@drawable/ic_arrow_back_black_24dp"
        />

    <ImageView
        android:id="@+id/logo_question_hat"
        android:layout_width="@dimen/_90sdp"
        android:layout_height="@dimen/_90sdp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_50sdp"
        android:src="@drawable/logo1"
        tools:ignore="ContentDescription" />
    <TextView
        android:id="@+id/verification_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Verification"
        android:textAllCaps="true"
        android:layout_below="@+id/logo_question_hat"
        android:textColor="@android:color/black"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_30sdp"
        android:textSize="@dimen/_15sdp"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/data_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please enter the OTP code sent on your Email Address to verify yourself."
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/verification_text"
        android:gravity="center"
        android:textSize="@dimen/_15sdp"
        android:layout_margin="@dimen/_10sdp"
        />
    <EditText
        android:id="@+id/first_index"
        android:layout_width="@dimen/_45sdp"
        android:layout_height="@dimen/_40sdp"
        android:background="@drawable/edit"
        android:layout_below="@+id/data_text"
        android:padding="@dimen/_8sdp"
        android:gravity="center"
        android:inputType="number"
        android:layout_marginLeft="@dimen/_55sdp"
        android:layout_marginTop="@dimen/_35sdp"/>
    <EditText
        android:id="@+id/second_index"
        android:layout_width="@dimen/_45sdp"
        android:layout_height="@dimen/_40sdp"
        android:background="@drawable/edit"
        android:gravity="center"
        android:layout_below="@+id/data_text"
        android:layout_toRightOf="@+id/first_index"
        android:layout_marginLeft="@dimen/_8sdp"
        android:padding="@dimen/_8sdp"
        android:inputType="number"
        android:layout_marginTop="@dimen/_35sdp"/>
    <EditText
        android:id="@+id/third_index"
        android:layout_width="@dimen/_45sdp"
        android:layout_height="@dimen/_40sdp"
        android:background="@drawable/edit"
        android:layout_below="@+id/data_text"
        android:layout_toRightOf="@+id/second_index"
        android:padding="@dimen/_8sdp"
        android:gravity="center"
        android:inputType="number"
        android:layout_marginLeft="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_35sdp"/>
    <EditText
        android:id="@+id/fourth_index"
        android:layout_width="@dimen/_45sdp"
        android:layout_height="@dimen/_40sdp"
        android:background="@drawable/edit"
        android:layout_below="@+id/data_text"
        android:padding="@dimen/_8sdp"
        android:inputType="number"
        android:gravity="center"
        android:layout_toRightOf="@+id/third_index"
        android:layout_marginLeft="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_35sdp"/>
    <Button
        android:id="@+id/verify_btn"
        android:layout_width="@dimen/_250sdp"
        android:layout_height="@dimen/_50sdp"
        android:background="@drawable/editt"
        android:text="Verify"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:fontFamily="sans-serif"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/fourth_index"
        android:layout_marginTop="@dimen/_40sdp"
        android:textAllCaps="false"/>
    <TextView
        android:id="@+id/text_password_new"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Password"
        android:visibility="invisible"
        android:layout_below="@id/verify_btn"
        android:layout_marginTop="@dimen/_25sdp"
        android:layout_marginLeft="@dimen/_25sdp"
        android:layout_marginStart="@dimen/_25sdp"
        android:textSize="@dimen/_18sdp"
        />
    <!--
    input type password bay8r font
    -->
    <EditText
        android:id="@+id/new_password_edit_text"
        android:layout_width="@dimen/_280sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_below="@+id/text_password_new"
        android:layout_marginLeft="@dimen/_25sdp"
        android:layout_marginStart="@dimen/_25sdp"
        android:inputType="textPassword"
        android:visibility="invisible"
        android:hint="Enter your new-password"
        tools:ignore="Autofill,TextFields" />
    <Button
        android:id="@+id/done"
        android:layout_width="@dimen/_250sdp"
        android:layout_height="@dimen/_50sdp"
        android:background="@drawable/editt"
        android:text="Done"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:visibility="invisible"
        android:fontFamily="sans-serif"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/new_password_edit_text"
        android:layout_marginTop="@dimen/_20sdp"
        android:textAllCaps="false"/>
</RelativeLayout>