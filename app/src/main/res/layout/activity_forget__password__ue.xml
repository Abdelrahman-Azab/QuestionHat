<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Forget_Password_UE">
    <ImageView
        android:id="@+id/arrow"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_margin="@dimen/_15sdp"
        android:src="@drawable/ic_arrow_back_black_24dp"
        />

    <ImageView
        android:id="@+id/logo_question_hat"
        android:layout_width="@dimen/_90sdp"
        android:layout_height="@dimen/_90sdp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_50sdp"
        android:src="@drawable/logo1"
        tools:ignore="ContentDescription" />
    <TextView
        android:id="@+id/forgot_password_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/logo_question_hat"
        android:layout_marginTop="@dimen/_30sdp"
        android:text="Forgot Password"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        />
    <TextView
        android:id="@+id/data_text"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Please enter the email address you used to register on the app"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/forgot_password_text"
        android:textSize="16sp"
        android:layout_marginTop="@dimen/_10sdp"/>


    <!--
    Email
    -->
    <TextView
        android:id="@+id/text_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/email"
        android:layout_below="@+id/data_text"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginLeft="@dimen/_25sdp"
        android:layout_marginStart="@dimen/_25sdp"
        android:textSize="@dimen/_18sdp"/>
    <EditText
        android:id="@+id/email_edit_text"
        android:layout_width="@dimen/_280sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_below="@+id/text_email"
        android:layout_marginLeft="@dimen/_25sdp"
        android:layout_marginStart="@dimen/_25sdp"
        android:hint="@string/enteremail"
        android:inputType="textEmailAddress"
        tools:ignore="Autofill,TextFields"
        />
    <Button
        android:id="@+id/confirm_btn"
        android:layout_width="@dimen/_250sdp"
        android:layout_height="@dimen/_50sdp"
        android:background="@drawable/editt"
        android:text="Confirm Email"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:fontFamily="sans-serif"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/email_edit_text"
        android:layout_marginTop="@dimen/_25sdp"
        android:textAllCaps="false"/>
</RelativeLayout>